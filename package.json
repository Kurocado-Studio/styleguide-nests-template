{
  "name": "@kurocado-studio/nestjs-template",
  "version": "0.0.0-semantically-released",
  "description": "",
  "author": "",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "commitlint": "pnpm exec commitlint --edit .git/COMMIT_EDITMSG",
    "dev": "nest start --watch",
    "eslint-fix": "eslint --max-warnings=0 . --fix --no-warn-ignored",
    "lint": "eslint --max-warnings=0 . --no-warn-ignored",
    "prepare": "husky install",
    "prettier-check": "prettier --check .",
    "prettier-fix": "prettier --check . --write",
    "semantic-release": "semantic-release",
    "start": "node dist/src/main",
    "test": "vitest run --coverage",
    "typecheck": "tsc"
  },
  "lint-staged": {
    "*": [
      "pnpm run prettier-fix"
    ],
    "**/*.ts": [
      "pnpm run eslint-fix",
      "pnpm run lint"
    ]
  },
  "dependencies": {
    "@nestjs/common": "^11.0.15",
    "@nestjs/core": "^10.4.15",
    "@nestjs/platform-express": "^10.4.15",
    "@octopusdeploy/step-package-cli": "4.0.4",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "^3.0.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@kurocado-studio/qa": "^1.1.4",
    "@kurocado-studio/styleguide": "^2.3.3",
    "@nestjs/cli": "^11.0.5",
    "@nestjs/schematics": "^11.0.2",
    "@nestjs/testing": "^10.4.15",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.16",
    "@types/node": "22.13.10",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^3.0.6",
    "@vitest/ui": "^3.1.1",
    "commitlint": "^19.8.0",
    "eslint": "^9.22.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "semantic-release": "^23.1.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.0",
    "typescript": "^5.8.3",
    "vite": "^6.2.6"
  }
}
