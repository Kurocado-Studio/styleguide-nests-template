{
  "name": "@kurocado-studio/nestjs-template",
  "version": "0.0.0-semantically-released",
  "description": "",
  "author": "",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "commitlint": "pnpm exec commitlint --edit .git/COMMIT_EDITMSG",
    "eslint-debug": "eslint --max-warnings=0 . --debug",
    "eslint-fix": "eslint --max-warnings=0 . --fix --no-warn-ignored",
    "lint": "eslint --max-warnings=0 . --no-warn-ignored",
    "prepare": "husky install",
    "prettier-check": "prettier --check .",
    "prettier-fix": "prettier --check . --write",
    "semantic-release": "semantic-release",
    "start": "node dist/main",
    "start:debug": "nest start --debug --watch",
    "start:dev": "nest start --watch",
    "test": "vitest run",
    "typecheck": "tsc"
  },
  "lint-staged": {
    "*": [
      "pnpm run prettier-fix"
    ],
    "**/*.ts": [
      "pnpm run eslint-fix",
      "pnpm run lint"
    ]
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@octopusdeploy/step-package-cli": "4.0.2",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "unplugin-swc": "1.5.1",
    "vite-tsconfig-paths": "5.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "@fwouts/vite-tsconfig-paths": "4.2.1",
    "@kurocado-studio/style-guide": "^2.2.2",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@vitest/coverage-v8": "^3.0.5",
    "@vitest/ui": "^2.1.3",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "prettier-plugin-packagejson": "^2.5.8",
    "semantic-release": "^23.0.2",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "typescript": "^5.3.3",
    "vite": "^5.4.9",
    "vitest": "^2.1.3"
  }
}
